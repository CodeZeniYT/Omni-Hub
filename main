-- ============================================================
--  FARM TAB — Auto Strength | Production Ready | v2.0
-- ============================================================

getgenv().AutoGrind = false

-- ============================================================
--  CONFIGURATION (tweak here, no need to touch logic below)
-- ============================================================
local CONFIG = {
    -- Tool detection: matches if tool name contains ANY of these (case-insensitive)
    WeightNamePatterns  = { "weight" },
    -- Also match numbered tools: "Weight 2", "Weight 3", etc.
    WeightNumberedMatch = true,
    -- Minimum number suffix to count as a weight (1 = Weight 1, 2 = Weight 2, etc.)
    MinWeightNumber     = 1,
    -- Rep fire method: "event" = FireServer("rep"), "invoke" = InvokeServer("rep")
    RepMethod           = "event",
    -- How many times to fire per Heartbeat tick (1 = fastest safe, 2+ = aggressive)
    RepsPerTick         = 1,
    -- Delay between equip attempts when no weight found (seconds)
    EquipRetryDelay     = 0.5,
    -- How long to wait after respawn before re-equipping
    RespawnSettleDelay  = 2.0,
    -- Max time to wait for muscleEvent remote before aborting
    RemoteWaitTimeout   = 15,
}

-- ============================================================
--  UI
-- ============================================================

Tabs.Farm:Toggle({
    Title    = "Auto Strength",
    Desc     = "Fastest bypass — Heartbeat-driven rep spam with auto equip",
    Value    = false,
    Callback = function(v)
        getgenv().AutoGrind = v
    end
})

-- ============================================================
--  SERVICES & PLAYER
-- ============================================================

local Players        = game:GetService("Players")
local RunService     = game:GetService("RunService")
local LocalPlayer    = Players.LocalPlayer

-- ============================================================
--  REMOTE ACQUISITION
-- ============================================================

local muscleEvent = LocalPlayer:WaitForChild("muscleEvent", CONFIG.RemoteWaitTimeout)
if not muscleEvent then
    warn("[AutoStrength] FATAL: muscleEvent remote not found after " .. CONFIG.RemoteWaitTimeout .. "s. Auto Strength will not work.")
    return
end

-- ============================================================
--  STATE
-- ============================================================

local State = {
    character    = nil,  -- current Character model
    humanoid     = nil,  -- current Humanoid
    equipped     = nil,  -- currently tracked Weight tool
    alive        = false,
    initialized  = false,
}

-- ============================================================
--  TOOL DETECTION
-- ============================================================

-- Returns true if a Tool qualifies as a "Weight" based on CONFIG rules
local function isWeightTool(tool)
    if not tool or not tool:IsA("Tool") then return false end

    local nameLower = tool.Name:lower()

    -- 1. Direct name pattern match (e.g. "weight", "Weight", "WEIGHT")
    for _, pattern in ipairs(CONFIG.WeightNamePatterns) do
        if string.find(nameLower, pattern:lower(), 1, true) then
            return true
        end
    end

    -- 2. Numbered tool match: "Weight 1", "Weight 2", etc. (covers "Weight 10", "Weight 2", etc.)
    if CONFIG.WeightNumberedMatch then
        local numStr = string.match(nameLower, "weight%s*(%d+)")
        if numStr then
            local num = tonumber(numStr)
            if num and num >= CONFIG.MinWeightNumber then
                return true
            end
        end
    end

    -- 3. Has a repTime child (game-native signal that it's a grindable tool)
    if tool:FindFirstChild("repTime") then
        return true
    end

    return false
end

-- ============================================================
--  WEIGHT FINDER
-- ============================================================

-- Returns the best Weight tool from the backpack, or nil
-- "Best" = highest number suffix (Weight 10 > Weight 2 > Weight, gives strongest tool)
local function getBestWeightFromBackpack()
    local backpack = LocalPlayer:FindFirstChild("Backpack")
    if not backpack then return nil end

    local best      = nil
    local bestScore = -1

    for _, tool in ipairs(backpack:GetChildren()) do
        if isWeightTool(tool) then
            -- Score by number suffix (no number = 0)
            local numStr = string.match(tool.Name:lower(), "weight%s*(%d+)")
            local score  = numStr and (tonumber(numStr) or 0) or 0
            if score > bestScore then
                bestScore = score
                best      = tool
            end
        end
    end

    return best
end

-- Returns the Weight tool currently equipped in the character, or nil
local function getEquippedWeight()
    if not State.character then return nil end
    for _, obj in ipairs(State.character:GetChildren()) do
        if isWeightTool(obj) then
            return obj
        end
    end
    return nil
end

-- ============================================================
--  EQUIP LOGIC
-- ============================================================

local function tryEquipWeight()
    if not State.humanoid or State.humanoid.Health <= 0 then return false end
    local w = getBestWeightFromBackpack()
    if not w then return false end
    local ok, err = pcall(function()
        State.humanoid:EquipTool(w)
    end)
    if not ok then
        warn("[AutoStrength] EquipTool failed:", err)
    end
    return ok
end

-- ============================================================
--  CHARACTER INIT / RESPAWN HANDLER
-- ============================================================

local function initCharacter(char)
    State.character   = char
    State.humanoid    = char:WaitForChild("Humanoid", 5)
    State.equipped    = nil
    State.alive       = (State.humanoid ~= nil)
    State.initialized = true

    -- Track death
    if State.humanoid then
        State.humanoid.Died:Connect(function()
            State.alive   = false
            State.equipped = nil
        end)
    end
end

-- Hook respawn for the lifetime of this script
LocalPlayer.CharacterAdded:Connect(function(newChar)
    initCharacter(newChar)
    task.wait(CONFIG.RespawnSettleDelay)
    if getgenv().AutoGrind then
        tryEquipWeight()
    end
end)

-- Initialize with the current character (already loaded)
if LocalPlayer.Character then
    initCharacter(LocalPlayer.Character)
end

-- ============================================================
--  REP FIRE
-- ============================================================

local function fireRep()
    if CONFIG.RepMethod == "invoke" then
        pcall(function() muscleEvent:InvokeServer("rep") end)
    else
        pcall(function() muscleEvent:FireServer("rep") end)
    end
end

-- ============================================================
--  HEARTBEAT LOOP — Fastest possible, one connection, no task.wait
-- ============================================================
--  RunService.Heartbeat fires every frame (~60/s, no artificial delay).
--  This is the fastest bypass method without Stepped/BindToRenderStep tricks.
-- ============================================================

local equipCooldown   = 0
local EQUIP_INTERVAL  = CONFIG.EquipRetryDelay

RunService.Heartbeat:Connect(function(dt)
    if not getgenv().AutoGrind then return end
    if not State.initialized then return end

    -- Guard: character changed mid-session
    if LocalPlayer.Character ~= State.character then
        initCharacter(LocalPlayer.Character)
        return
    end

    -- Guard: not alive
    if not State.alive then return end
    if not State.humanoid or State.humanoid.Health <= 0 then
        State.alive = false
        return
    end

    -- Check if a weight is equipped right now
    local currentWeight = getEquippedWeight()

    if not currentWeight then
        -- Throttle equip retries so we don't spam EquipTool every frame
        equipCooldown = equipCooldown + dt
        if equipCooldown >= EQUIP_INTERVAL then
            equipCooldown = 0
            tryEquipWeight()
        end
        return  -- Don't fire reps until weight is equipped
    end

    -- Weight is equipped — track it and fire reps
    State.equipped = currentWeight

    for _ = 1, CONFIG.RepsPerTick do
        fireRep()
    end
end)

--// SETTINGS
getgenv().AutoRebirth      = false
getgenv().AutoRebirthDelay = 1 -- seconds between rebirths

--// SERVICES & REMOTE
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local rEvents = ReplicatedStorage:WaitForChild("rEvents")
local rebirthRemote = rEvents:WaitForChild("rebirthRemote")

-- one-shot test (optional, can delete after confirming it rebirths you once)
task.spawn(function()
    task.wait(2)
    print("[AutoRebirth] Testing single rebirth call")
    local ok, err = pcall(function()
        rebirthRemote:InvokeServer("rebirthRequest")
    end)
    print("[AutoRebirth] Test result:", ok, err)
end)

--// WINDUI TOGGLE (put on whatever tab you want, here I use Tabs.Farm)
Tabs.Farm:Toggle({
    Title = "Auto Rebirth",
    Desc  = "Automatically invoke rebirthRemote",
    Value = false,
    Callback = function(state)
        getgenv().AutoRebirth = state
        print("[AutoRebirth] Toggled:", state)
    end
})

--// MAIN LOOP
task.spawn(function()
    while true do
        task.wait(getgenv().AutoRebirthDelay)

        if not getgenv().AutoRebirth then
            continue
        end

        local ok, err = pcall(function()
            rebirthRemote:InvokeServer("rebirthRequest")
        end)

        if not ok then
            warn("[AutoRebirth] Invoke failed:", err)
        end
    end
end)


