    Title       = "TP Delay (seconds)",
    Desc        = "Time between teleports (e.g. 0.5, 1, 2)",
    Placeholder = "1",
    Callback    = function(text)
        local n = tonumber(text)
        if n and n > 0 then
            getgenv().TPDelay = n
            print("[TP] Delay set to:", n)
        else
            print("[TP] Invalid delay input:", text)
        end
    end
})

-- Auto TP toggle
Tabs.Misc:Toggle({
    Title   = "Auto TP Muscle King Gym",
    Desc    = "Teleport to gym every TP Delay seconds",
    Value   = false,
    Callback = function(state)
        getgenv().AutoTPToGym = state
        print("[TP] AutoTP:", state)
    end
})

--// LOOP
task.spawn(function()
    while true do
        task.wait(getgenv().TPDelay)
        if not getgenv().AutoTPToGym then
            continue
        end

        local char = LocalPlayer.Character
        local hrp  = char and char:FindFirstChild("HumanoidRootPart")
        if hrp then
            hrp.CFrame = kingGymCF
        end
    end
end)

