-- Universal Teleport Function (Advanced & Error-Handled)
local function TeleportTo(posName)
    local player = game:GetService("Players").LocalPlayer
    if player and player.Character then
        local hrp = player.Character:FindFirstChild("HumanoidRootPart")
        if hrp then
            hrp.CFrame = Teleports[posName].CFrame
            WindUI:Notify({
                Title   = "Teleport Success",
                Content = "Teleported to " .. posName .. "!",
                Icon    = Teleports[posName].Icon,
                Duration = 3
            })
        else
            WindUI:Notify({
                Title   = "Error",
                Content = "No HumanoidRootPart found. Respawn and try again.",
                Icon    = "x-circle",
                Duration = 3
            })
        end
    else
        WindUI:Notify({
            Title   = "Error",
            Content = "Character not loaded. Wait and retry.",
            Icon    = "x-circle",
            Duration = 3
        })
    end
end

-- Dynamic Buttons (Scalable - Add new islands to Teleports table)
for islandName, data in pairs(Teleports) do
    TeleportSection:Button({
        Title    = "TP: " .. islandName,
        Icon     = data.Icon,
        Callback = function() TeleportTo(islandName) end
    })
end

